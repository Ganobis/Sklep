@model Sklep.ViewModel.UzytkownikViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Zaloguj</h2>

<div id="login-div">
    @using (Html.BeginForm("Autoryzuj", "Login", FormMethod.Post))
    {
        <table>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Mail)
                </td>
                <td>
                    @Html.EditorFor(model => model.Mail)
                </td>
            </tr>
            <tr>
                <td>
                </td>
                <td>
                    @Html.ValidationMessageFor(model => model.Mail)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Haslo)
                </td>
                <td>
                    @Html.EditorFor(model => model.Haslo)
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <label>
                        @Html.DisplayFor(model => model.WiadomoscBledu)
                    </label>
                </td>
            </tr>
            <tr>
                <td>
                </td>
                <td>
                    @Html.ValidationMessageFor(model => model.Haslo)
                </td>
            </tr>
            <tr>
                <td>
                </td>
                <td>
                    <input type="submit" name="name" value="Login"/>
                </td>
            </tr>
        </table>
    }
</div>

<script src="~/Scripts/jquery-1.8.0.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>